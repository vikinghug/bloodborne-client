.main-content.new
  form(ng-submit="submitRegistration(loginForm)" ng-init="loginForm = {}")
    .row
      .small-12.medium-6.small-centered.columns
        h2 Register
        .row
          .small-12.columns
            label
              | username
              input(type='text' name='username' ng-model='loginForm.username')
        .row
          .small-12.columns
            label
              | email
              input(type='email' name='email' ng-model='loginForm.email')
        .row
          .small-12.columns
            label
              | password
              input(type='password' ng-model='loginForm.password')
        .row
          .small-12.columns
            input.button(type='submit')
              

