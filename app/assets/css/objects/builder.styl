$stat-row {
  display: block;
  height: 1.8em;
  position: relative;
}

.builder {
  // background: lighten($black, 5%);
  display: block;
  margin-top: 10px;

  .columns {
    padding: 40px;
  }

  .stat {
    @extend $stat-row;
    box-shadow: 0 1px 0 rgba($cream, .2);

    .right {
      position: absolute;
      top: 0;
      right: 0;
      text-align: right;

      input {
        background-color: $black;
        border: none;
        color: $white;
        font-size: 10px;
        text-align: center;
        padding: 0;
      }

      > * {
        display: inline-block;
      }
    }
  }

  .empty {
    @extend $stat-row;
  }
}
